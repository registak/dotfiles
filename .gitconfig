[core]
	excludesfile = ~/.gitignore_global
[include]
    path = ~/.gitconfig.local
[color]
    ui = auto
    status = auto
    diff = auto
    branch = auto
    interactive = auto
    grep = auto
[pager]
    log  = less
    show = less
    diff = less
[alias]
	vlog = log --graph --date-order --date=relative --pretty=format:\"%C(cyan)%h: %Cblue - %an - %Cgreen %C(cyan)%ar:%Creset%n%s%n\" --color